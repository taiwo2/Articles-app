
<%= simple_form_for @article do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Create Article' : 'Update Article', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
