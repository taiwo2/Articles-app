<% content_for :title do %>
  Search Statistics
<% end %>

<div class="page-header">
  <h1>Search Statistics</h1>
  <div class="d-flex align-items-center">
    <%= link_to 'Clear Statistics',
      search_statistics_path,
      class: 'btn btn-danger mr-2',
      method: :delete,
      data: { confirm: 'Are you sure?' } %>
    <div class="alert alert-info mb-0">Statistics are updated once a minute.</div>
  </div>
</div>

<div class="table-responsive statistics_table">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Term</th>
        <th class="result_count">Search count</th>
        <th class="result_count">Average results</th>
        <th class="result_count">Zero results count</th>
      </tr>
    </thead>

    <tbody>
      <% @searches.each do |search| %>
        <tr>
          <td><%= search.term %></td>
          <td><%= search.count %></td>
          <td><%= search.article_count / search.count %></td>
          <td><%= search.zero_article_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>